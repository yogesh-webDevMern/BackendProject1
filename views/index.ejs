<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="main max-w-[100%] min-h-screen bg-zinc-800">
  <form action="/submit" method="post">
    <div class="form-box p-10 text-white">
        <input type="text" class="bg-zinc-900 rounded-md w-[100%] py-2 outline-none text-white px-5" name="task" placeholder="Enter your task name here...">
<textarea name="details" class="bg-zinc-900 w-full mt-4 resize-none outline-none py-2 px-5" placeholder="Enter your task details here..." id=""></textarea>
<button class="bg-blue-500 md:px-4 px-2 py-1 md:text-[16px] text-[14px] duration-300 rounded mt-4">Submit</button>
    </div>
    <div class="details-box flex gap-3 flex-wrap md:p-10 px-10">
    <% if(files.length>0)
    {%>
        <% files.forEach(function(val)
        {%>
            <div class="box1 text-white md:w-[24%] w-[45%] bg-zinc-900 md:px-10 md:py-5 py-4 px-5">
                <h1 class="md:text-[20px] text-[18px] font-bold"><%= val%></h1>
                <div class="buttons flex justify-between items-center">
                    <a class="text-blue-500 inline-block" href="/file/<%= val %>">Read More</a>
                    <div class="two-icons flex gap-3">
                        <a class="text-blue-500 inline-block" href="/edit/<%= val%>"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="text-blue-500 inline-block" href="/delete/<%= val%>"><i class="fa-solid fa-trash"></i></a>

                    </div>
                </div>
              
            </div>
        <%})%>
   <% }
        else
        {%>
    <h1 class="text-white bg-zinc-900 p-2 shadow-md cursor-grab">No tasks yet...</h1>
        <%}
   
